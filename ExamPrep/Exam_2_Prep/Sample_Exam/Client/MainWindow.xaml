<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:Components="clr-namespace:Components;assembly=Components" x:Class="Client.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="610" Width="460"
        Closed="MainWindow_OnClosed">
    <StackPanel>
        
        <Components:DataForm x:Name="ClientControl" HorizontalAlignment="Left" Height="450"  VerticalAlignment="Top" Width="450" LbFileNameText="File Name" LbFileContentsText="File Contents" BtnRequestText="Request" BtnSaveText="Save" Margin="0,-1,0,0" />
        <TextBox x:Name="Tb_Logs" Margin="5" Padding="10"  ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="120" ></TextBox>
    </StackPanel>
</Window>
