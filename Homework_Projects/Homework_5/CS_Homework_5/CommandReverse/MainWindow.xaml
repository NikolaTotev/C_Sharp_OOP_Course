<Window x:Class="CommandReverse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommandReverse"
        mc:Ignorable="d"
        Title="Commands" Height="120" Width="200">
    <StackPanel>
        <TextBox Name="txtBox" Margin="10,10"
                 FontWeight="Bold" Background="Aqua" TextChanged="OnTextChanged"/>
        <Button Name="btnReverse" HorizontalAlignment="Center" Padding="10,3"
                FontWeight="Bold" Margin="10,0"/>
    </StackPanel>
</Window>
